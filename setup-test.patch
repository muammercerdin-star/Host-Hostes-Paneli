+#!/usr/bin/env bash
+set -euo pipefail
+
+patch_file="${1:-}"
+if [[ -z "$patch_file" || ! -f "$patch_file" ]]; then
+  echo "Kullanım: tools/apply_patch.sh <patch-dosyası>"
+  exit 2
+fi
+
+echo "[1/3] Kontrol: git apply --check"
+git apply --check "$patch_file"
+
+echo "[2/3] Uygula: git apply"
+git apply "$patch_file"
+
+echo "[3/3] Aşama: git add -A"
+git add -A
+
+echo "Tamam. İsterseniz commit atın:"
+echo "  git commit -m \"apply: $(basename "$patch_file")\""
+
+exit 0
