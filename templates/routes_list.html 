  <h3>Dinamik Hatlar</h3>
  <table role="table" aria-label="Dinamik hatlar">
    <tr>
      <th scope="col">Ad</th>
      <th scope="col" class="actions">İşlem</th>
    </tr>
    {% for r in routes %}
      <tr>
        <td>{{ r.name }}</td>
     <td class="actions">
     <a class="btn blue" href="{{ url_for('builtin_route_edit', name=r.name) }}">Düzenle</a>
     <button class="btn green" type="button"
          onclick="setRoute({{ r.name | tojson }})">Seç</button>
          </td>
          <form class="inline" method="post" action="{{ url_for('route_delete', rid=r.id) }}"
                onsubmit="return confirm('Bu hattı silmek istiyor musun?')">
            <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
            <button class="btn red" type="submit">Sil</button>
          </form>

          <button class="btn green" type="button"
                  onclick="setRoute({{ r.name | tojson }})">Seç</button>
        </td>
      </tr>
    {% else %}
      <tr><td colspan="2">Kayıtlı dinamik hat yok.</td></tr>
